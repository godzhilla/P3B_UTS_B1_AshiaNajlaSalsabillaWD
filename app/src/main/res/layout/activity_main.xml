<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingHorizontal="31dp"
    android:paddingTop="100dp"
    >

    <TextView
        android:id="@+id/txt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="35dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_email"
        android:hint="Email"
        android:background="@drawable/container_rounded"
        android:paddingVertical="12dp"
        android:paddingHorizontal="30dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_username"
        android:hint="Username"
        android:background="@drawable/container_rounded"
        android:paddingVertical="12dp"
        android:paddingHorizontal="30dp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_password"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:background="@drawable/container_rounded"
        android:paddingVertical="12dp"
        android:paddingHorizontal="30dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_dob"
        android:hint="Date of Birth"
        android:layout_marginTop="20dp"
        android:background="@drawable/container_rounded"
        android:paddingVertical="12dp"
        android:paddingHorizontal="30dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:visibility="gone">

        <CalendarView
            android:id="@+id/calendar_date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:datePickerMode="calendar" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By checking the box you agree to our"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/text_view_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Terms"
            android:textSize="10sp"
            android:textColor="@color/blue"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" and"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/text_view_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Conditions"
            android:textSize="10sp"
            android:textColor="@color/blue"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="10sp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/blue"
        android:text="Register"
        android:textSize="18sp"
        android:paddingVertical="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already Have an Account?"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/text_view_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Log In"
            android:textSize="10sp"
            android:textColor="@color/blue"
            />

    </LinearLayout>


</LinearLayout>